#include<stdio.h>
#define n 5
int stack[n];
int top=-1;
void push()
{
    int x;
    printf(“Enter data “);
    scanf(“%d”,&x);
    if(top==n-1)
    {
        printf(“overflow”);
    }
    else
    {
        top++;
        stack[top]=x;
    }
}
void pop()
{
    int item;
    if(top==-1)
    {
        printf(“underflow”);
    }
    else
    {
        item=stack[top];
        top--;
        printf(“%d poped item\n”,item);
    }
}
void peek()
{
    if(top==-1)
    {
        printf(“no data”);
    }
    else
    {
        printf(“%d is at top\n”,stack[top]);
    }
}
void display()
{
    int I;
    printf(“Items in the stack are – “);
    for(i=top;i>=0;i--)
    {
        printf(“%d “,stack[i]);
    }
}

main()
{
    char ch;
    do
    {
        printf(“Enter your choice\n1.push\n2.pop\n3.peek\n4.display\n”);
        scanf(“%d”,&ch);
        switch(ch)
        {
        case 1:
            push();
            break;
        case 2:
            pop();
            break;
        case 3:
            peek();
            break;
        case 4:
            display();
            break;
            default:
            printf(“invalid”);
        }
    }
    while(ch!=4);
}


